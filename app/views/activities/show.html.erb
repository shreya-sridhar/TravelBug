<div style ="text-align:center">
<br><br>
<h3><%= @title %></h3>
<br>

<style>
.btn {
  background-color: black;
  border: none;
  /* padding: 15px 15px 15px 15px; */
  font-size: 16px;
  cursor: pointer;
}

/* Darker background on mouse-over */
.btn:hover {
  /* background-color: red; */
}
</style>

<%= link_to image_tag(@activity.img_url, :size => 500)%>
<br><br>

<%= form_for(@trip) do |f| %>
    <%= f.hidden_field :like, :value => true %>
    <%= f.hidden_field :trip_id, :value => @trip_id %>
    <%= f.hidden_field :activity_id, :value => @activity.id %>
    <button id="btn2" onclick="myFunction()"> Add To Itinerary <%= f.submit "+" %>
    </button>
<% end %>

<script>
  function myFunction() {
      var change = document.getElementById("btn2");
      if (change.innerHTML == "Add To Itinerary")
      {
          change.innerHTML = "Added To Itinerary";
      }
      else {
          change.innerHTML = "Add To Itinerary";
      }
  }
</script>

<br><br>
<h5><%= @activity.text %></h5>
<br><br>
<h5>Address : <%= @activity.address %></h5><br><br>
<h5>How To Get There?</h5>
 <iframe width="100%" 
  height="500" 
  frameborder="0" 
  scrolling="no" 
  marginheight="0" 
  marginwidth="0"  src="https://www.google.com/maps/embed/v1/place?q=<%=@activity.lat%>,<%=@activity.lng%>&amp;key=AIzaSyBAeaMywiXmsyhhPIabeTCZxBq6FqLAGWU"></iframe>
 
</div>
