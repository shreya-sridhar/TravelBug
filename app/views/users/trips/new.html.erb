<div class = 'triphome'>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p><%= error %> </p>
    <% end %>
<% end %>

<%= form_for([@user, @trip]) do |f| %>
 
    <%= f.label :date, 'Start Date:' %> 
    <%= f.date_field :start_date %> 
    
    <%= f.label :date, 'End Date:' %> 
    <%= f.date_field :end_date %>

    <%= f.label :num_of_people, 'No. of Travellers:' %>
    <%= f.text_field :num_of_people %><br>

    <%= f.label :traveller_names, 'Name of All Travellers:' %>
    <%= f.text_field :traveller_names %>

    <%= f.label :budget , 'Budget (in USD):' %> 
    <%= f.text_field :budget, :value => '$' %>

    <%# <%= f.collection_select :destination_id, @destinations, :id, :country %>
    <%= f.hidden_field :destination_id, :value => @destination.id %>
    <%# <br> %>
    <%= f.submit "Submit"%>
<% end %>
<br><br><br><br>

