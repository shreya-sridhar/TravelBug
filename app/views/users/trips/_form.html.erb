<%= form_for([@user, @trip]) do |f| %>
 
    <%= f.label :date, 'Start Date:' %> 
    <%= f.date_field :start_date %> 
    
    <%= f.label :date, 'End Date:' %> 
    <%= f.date_field :end_date %><br>

    <%= f.label :num_of_people, 'No. of Total Travellers:' %>
    <%= f.text_field :num_of_people %><br>

    <%= f.label :traveller_names, 'Name of All Travellers:' %>
    <%= f.text_field :traveller_names %><br>

    <%= f.label :budget , 'Budget (in USD):' %>
    <%= f.text_field :budget, :value => '$' %><br>

    <%= f.collection_select :destination_id, @destinations, :id, :country %><br>

    <br>
    <%= f.submit "Continue to Destinations" %>
<% end %>

