<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p><%= error %> </p>
    <% end %>
<% end %>

<%= form_with model:@user do |f| %>

    <%= f.label :username, 'Create username:' %>
    <%= f.text_field :username %><br>

    <%= f.label :password, 'Create password:' %>
    <%= f.text_field :password %><br>

    <%= f.label :name, 'Name:' %>
    <%= f.text_field :name %><br>

    <%= f.label :age, 'Age:' %>
    <%= f.text_field :age %><br>

    <%= f.label :hometown, 'Hometown:' %>
    <%= f.text_field :hometown %><br>

    <br>
    
    <%= f.submit 'Complete Sign Up'%>
<% end %>