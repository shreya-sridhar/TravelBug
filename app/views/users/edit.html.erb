<%= form_with model:@user, method: "PATCH" do |f| %>
    <%= f.label :name, 'Name:' %>
    <%= f.text_field :name %><br>

    <%= f.label :age, 'Age:' %>
    <%= f.text_field :age %><br>

    <%= f.label :hometown, 'Hometown:' %>
    <%= f.text_field :hometown %><br>

    <br>
    
    <%= f.submit 'Update Profile', class: 'button3'%>
<% end %>