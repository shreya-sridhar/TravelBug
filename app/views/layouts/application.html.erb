<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Phase2project</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  
  </head>

  <body>

    <% if request.path != '/' %>
        <%  if session[:user_id] %>
            <%= button_to 'Logout', logout_path, method: :delete, class:"button1" %>  
        <% else %>
            <%= button_to 'Login', new_login_path, method: :post, class:"button1" %> 
        <% end %>
    <% end %>

    <br>

    <% if flash[:errors]  %>
        <% flash[:errors].each do |error| %>
            <%= error %>
        <% end %>
    <% end %>


    <%= yield %>
  </body>
</html>
