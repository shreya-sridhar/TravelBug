<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title"><%= @body.length %>- Day Itinerary</h6>
                    <div id="content">
                    <% @body.each_with_index do |body,index| %>
                        <ul class="timeline">
                            <li class="event" data-date="Day <%= index.to_i + 1 %>">
                                <p><%= @title[index] %></p>
                                <p><%= body %></p>
                            </li>
                        </ul>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
$(document.getElementById('btn1')).bind('click', function() {
  if (document.getElementById('heart').style.color === "red")
  {
    document.getElementById('heart').style.color = "black"
    alert("Removed from Favorites")
  }
  else
  {
  document.getElementById('heart').style.color = "red"
  alert("Added to Favorites")
  }
})
</script>

