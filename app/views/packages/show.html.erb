<%= form_for(@package) do |f| %>
    <%= f.hidden_field :days, :value => @body.length %>
    <%= f.hidden_field :package, :value => @package %>
    <%= f.hidden_field :like, :value => true %>
    <%= f.submit "Submit"%>
<% end %>

