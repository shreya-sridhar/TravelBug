    <div class="carousel-item active">
      <img class="d-block w-100" src=<%= @image1 %> width="500" height="600" alt="First slide">
      <div class="carousel-caption d-none d-md-block">
    <h1>Explore</h1>
    <h1><%= @package %></h1>
  </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src=<%= @image2 %>  width="500" height="600" alt="Second slide">
       <div class="carousel-caption d-none d-md-block">
    <h1>Explore</h1>
    <h1><%= @package %></h1>
  </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" width="500" height="600" src=<%= @image3 %> alt="Third slide">
       <div class="carousel-caption d-none d-md-block">
    <h1>Explore</h1>
    <h1><%= @package %></h1>
  </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
