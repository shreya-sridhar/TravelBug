<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src=<%= @image1 %> width="500" height="600" alt="First slide">
      <div class="carousel-caption d-none d-md-block">
    <h1>Explore</h1>
    <h1><%= @package %></h1>
  </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src=<%= @image2 %>  width="500" height="600" alt="Second slide">
       <div class="carousel-caption d-none d-md-block">
    <h1>Explore</h1>
    <h1><%= @package %></h1>
  </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" width="500" height="600" src=<%= @image3 %> alt="Third slide">
       <div class="carousel-caption d-none d-md-block">
    <h1>Explore</h1>
    <h1><%= @package %></h1>
  </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title"><%= @title.length %>- Day Itinerary</h6>
                    <div id="content">
                    <% @title.each_with_index do |title,index| %>
                        <ul class="timeline">
                            <li class="event" data-date="Day <%= index %>">
                                <p><%= title %></p>
                                <p><%= @body[0] %></p>
                            </li>
                        </ul>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


