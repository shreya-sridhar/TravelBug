    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<style>
.btn {
  background-color: white;
  border: none;
  color: white;
  padding: 15px 15px 15px 15px;
  font-size: 16px;
  cursor: pointer;
}

/* Darker background on mouse-over */
/* .btn:hover {
  background-color: red;
} */

</style>

<div class="d-flex justify-content-center">
<button class="btn" title="Add To Favorites"><i class="fa fa-heart fa-2x" style="fontsize:45px;color:black"></button></i>
<br>
<button class="btn" title="Add To Itinerary"><i class="fa fa-plus fa-2x" style="fontsize:45px;color:black"></button></i>
<br><br><br>
</div>
<br>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title"><%= @body.length %>- Day Itinerary</h6>
                    <div id="content">
                    <% @body.each_with_index do |body,index| %>
                        <ul class="timeline">
                            <li class="event" data-date="Day <%= index.to_i + 1 %>">
                                <p><%= @title[index] %></p>
                                <p><%= body %></p>
                            </li>
                        </ul>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


