<div class= 'wrapper' id='login'>
    <h1> Welcome Back!</h1>
    <div class= 'title'
        <h3> Login Form </h3>
    </div>
    <div class= 'login_form'>
        <%= form_with url: login_index_path  do |f|%>
        <div class= 'field'>
            <%= f.text_field :username, placeholder: 'Username' %><br>
            <%= f.password_field :password, placeholder: 'Password' %><br>
        </div>    
        <div class='submit'>
            <%= f.submit 'Login', class: 'button1' %>
        </div>
        <% end %>
    </div>

</div>